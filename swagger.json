{
    "openapi": "3.0.0",
    "info": {
        "title": "MovieFlix API",
        "description": "API responsável por gerenciar os filmes do MovieFlix.",
        "version": "1.0.0"
    },

    "paths": {
        "/movies": {
            "get": {
                "tags": ["Filmes"],
                "summary": "Listar todos os filmes",
                "responses": {
                    "200": {
                        "description": "Retorna uma lista de filmes.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Movie"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },

    "components": {
        "schemas": {
            "Movie": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID do filme."
                    },
                    "title": {
                        "type": "string",
                        "description": "Nome do filme."
                    },
                    "genre_id": {
                        "type": "integer",
                        "description": "Genero do filme."
                    },
                    "genres": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "integer",
                                "description": "ID do gênero."
                            },
                            "name": {
                                "type": "string",
                                "description": "Nome do gênero."
                            }
                        }  
                    },
                    "language_id": {
                        "type": "integer",
                        "description": "Idioma do filme."
                    },
                    "language": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "integer",
                                "description": "ID do idioma."
                            },
                            "name": {
                                "type": "string",
                                "description": "Nome do idioma."
                            }
                        }  
                    },
                    "oscar_count": {
                        "type": "integer",
                        "description": "Quantidade de oscar ganhos pelo filme."
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "description": "Data de lancamento do filme."
                    }
                }
            }
        }
    }
}